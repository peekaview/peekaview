{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "files": [
    "src/vite-env.d.ts",
    "src/vue-shims.d.ts"
  ],
  "include": [
    "src/renderer/env.d.ts",
    "src/renderer/**/*",
    "src/renderer/**/*.vue",
    "src/preload/*.d.ts"
  ],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@renderer/*": [
        "src/renderer/*"
      ]
    },
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ]
  }
}
