  "main": "./.webpack/main",
  "scripts": {
    "preinstall": "node preinstall.js",
    "web-dev": "dotenvx run -- webpack serve --mode=development",
    "web-build": "dotenvx run -- webpack --mode=production",
    "electron-dev": "dotenvx run -- electron-forge start -- --no-sandbox ",
    "electron-build-linux": "dotenvx run -- electron-forge make --platform linux --arch x64",
    "electron-build-win": "dotenvx run -- electron-forge make --platform win32 --arch x64 --target squirrel",
    "package": "dotenvx run -- electron-forge package",
    "tsc": "vue-tsc --noEmit",
    "electron-build": "dotenvx run -- electron-forge make --platform linux --arch x64 && dotenvx run -- electron-forge make --platform win32 --arch x64 --target squirrel",
    "make:mac": "dotenvx run -- electron-forge make --platform darwin --arch arm64,x64",
    "make:mac-arm": "dotenvx run -- electron-forge make --platform darwin --arch arm64",
    "make:mac-intel": "dotenvx run -- electron-forge make --platform darwin --arch x64"
  },
  "overrides": {
    "os": {
      "linux": {
        "dependencies": {}
      },
      "win32": {
        "dependencies": {}
      },
      "darwin": {
        "dependencies": {}
      }
    }
  },
