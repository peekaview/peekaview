{
  "name": "peekaview",
  "author": "Limtec GmbH",
  "productName": "Peek-A-View",
  "version": "0.0.1",
  "description": "Simple screen sharing application",
  "license": "AGPL-3.0",
  "private": true,
  "main": "./.webpack/main",
  "scripts": {
    "web-dev": "dotenvx run -- webpack serve --mode=development",
    "web-build": "dotenvx run -- webpack --mode=production",
    "electron-dev": "dotenvx run -- electron-forge start",
    "electron-build-linux": "dotenvx run -- electron-forge make --platform linux --arch x64",
    "electron-build-win": "dotenvx run -- electron-forge make --platform win32 --arch x64 --target wix",
    "package": "dotenvx run -- electron-forge package",
    "tsc": "vue-tsc --noEmit",
    "electron-build": "dotenvx run -- electron-forge make --platform linux --arch x64 && dotenvx run -- electron-forge make --platform win32 --arch x64 --target wix"
  },
  "dependencies": {
    "bootstrap": "^5.3.3",
    "bootstrap-vue-next": "^0.25.10",
    "electron-squirrel-startup": "^1.0.1",
    "livekit-client": "2.1.5",
    "sweetalert2": "^11.14.4",
    "update-electron-app": "^3.0.0",
    "vue": "^3.5.12",
    "vue-i18n": "^10.0.4"
  },
  "devDependencies": {
    "@dotenvx/dotenvx": "^1.21.1",
    "@electron-forge/cli": "^7.4.0",
    "@electron-forge/maker-deb": "^7.4.0",
    "@electron-forge/maker-rpm": "^7.4.0",
    "@electron-forge/maker-squirrel": "^7.4.0",
    "@electron-forge/maker-wix": "^7.4.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.4.0",
    "@electron-forge/plugin-fuses": "^7.4.0",
    "@electron-forge/plugin-webpack": "^7.5.0",
    "@electron/asar": "^3.2.16",
    "@electron/fuses": "^1.8.0",
    "@electron/typescript-definitions": "^9.0.0",
    "@types/electron": "^1.6.10",
    "@types/node": "^22.7.4",
    "css-loader": "^7.1.2",
    "electron": "^32.0.0",
    "fork-ts-checker-webpack-plugin": "^9.0.2",
    "html-webpack-plugin": "^5.6.0",
    "mini-css-extract-plugin": "^2.9.1",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.2",
    "vue-loader": "^17.4.2",
    "vue-template-compiler": "^2.7.16",
    "vue-tsc": "^2.1.8",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.1.0"
  },
  "build": {
    "appId": "de.limtec.peekaview",
    "protocols": [
      {
        "name": "Peekaview Protocol",
        "schemes": [
          "peekaview"
        ]
      }
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "src/assets/windows/icon.ico"
    },
    "linux": {
      "target": [
        "deb"
      ],
      "desktop": {
        "MimeType": "x-scheme-handler/peekaview"
      },
      "extraFiles": [
        {
          "from": "src/assets/linux",
          "to": "usr/share/applications",
          "filter": [
            "*.desktop"
          ]
        },
        {
          "from": "src/assets/linux",
          "to": "usr/share/mime/packages",
          "filter": [
            "*.xml"
          ]
        }
      ],
      "deb": {
        "afterInstall": "src/assets/linux/postinstall"
      }
    }
  }
}
