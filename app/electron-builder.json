{
  "appId": "com.limtec.peekaview",
  "productName": "peekaview",
  "directories": {
    "buildResources": "build-resources",
    "output": "dist"
  },
  "publish": [
    {
      "provider": "github",
      "owner": "peekaview",
      "repo": "peekaview"
    }
  ],
  "files": [
    "!**/.vscode/*",
    "!src/*",
    "!electron.vite.config.{js,ts,mjs,cjs}",
    "!{.eslintignore,.eslintrc.cjs,.prettierignore,.prettierrc.yaml,dev-app-update.yml,CHANGELOG.md,README.md}",
    "!{.env,.env.*,.npmrc,pnpm-lock.yaml}",
    "!{tsconfig.json,tsconfig.node.json,tsconfig.web.json}",
    "out/**/*",
    "build/**/*",
    "node_modules/**/*",
    "package.json"
  ],
  "extraResources": [
    {
      "from": "locales",
      "to": "./locales",
      "filter": [
        "**/*"
      ]
    },
    {
      "from": "static",
      "to": "./static",
      "filter": [
        "**/*"
      ]
    }
  ],
  "asar": {
    "smartUnpack": true
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": [
          "x64",
          "ia32"
        ]
      }
    ],
    "icon": "build-resources/icon.ico",
    "artifactName": "${productName}-${version}-win-${arch}.${ext}"
  },
  "nsis": {
    "oneClick": false,
    "perMachine": true,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "peekaview"
  },
  "mac": {
    "target": [
      "dmg",
      "zip"
    ],
    "category": "public.app-category.utilities",
    "icon": "build-resources/icon.icns",
    "artifactName": "${productName}-${version}-mac.${ext}",
    "entitlements": "build-resources/entitlements.mac.plist",
    "entitlementsInherit": "build-resources/entitlements.mac.plist",
    "hardenedRuntime": true,
    "notarization": {
      "timeout": 300000
    },
    "gatekeeperAssess": false,
    "signIgnore": [
      "node_modules/koffi/build/koffi/win32_x64/koffi.node",
      "node_modules/koffi/build/koffi/win32_ia32/koffi.node",
      "node_modules/koffi/build/koffi/win32_arm64/koffi.node",
      "node_modules/@nut-tree-fork/libnut-win32/build/Release/libnut.node",
      "node_modules/@nut-tree-fork/libnut-linux/build/Release/libnut.node"
    ],
    "forceCodeSigning": true,
    "additionalArguments": [
      "--deep",
      "--force",
      "--options=runtime",
      "--timestamp"
    ],
    "binaries": [
      "Contents/MacOS/peekaview",
      "Contents/Resources/app.asar.unpacked/node_modules/@nut-tree-fork/node-mac-permissions/build/Release/permissions.node",
      "Contents/Resources/app.asar.unpacked/node_modules/@nut-tree-fork/libnut-darwin/build/Release/libnut.node",
      "Contents/Resources/app.asar.unpacked/node_modules/koffi/build/koffi/darwin_x64/koffi.node",
      "Contents/Resources/app.asar.unpacked/node_modules/koffi/build/koffi/darwin_arm64/koffi.node",
      "Contents/Frameworks/peekaview Helper (GPU).app/Contents/MacOS/peekaview Helper (GPU)",
      "Contents/Frameworks/Electron Framework.framework/Versions/A/Electron Framework",
      "Contents/Frameworks/Electron Framework.framework/Versions/A/Libraries/libEGL.dylib",
      "Contents/Frameworks/Electron Framework.framework/Versions/A/Libraries/libvk_swiftshader.dylib",
      "Contents/Frameworks/Electron Framework.framework/Versions/A/Libraries/libGLESv2.dylib",
      "Contents/Frameworks/Electron Framework.framework/Versions/A/Libraries/libffmpeg.dylib",
      "Contents/Frameworks/Electron Framework.framework/Versions/A/Helpers/chrome_crashpad_handler",
      "Contents/Frameworks/ReactiveObjC.framework/Versions/A/ReactiveObjC",
      "Contents/Frameworks/Squirrel.framework/Versions/A/Squirrel",
      "Contents/Frameworks/Squirrel.framework/Versions/A/Resources/ShipIt",
      "Contents/Frameworks/peekaview Helper (Plugin).app/Contents/MacOS/peekaview Helper (Plugin)",
      "Contents/Frameworks/Mantle.framework/Versions/A/Mantle",
      "Contents/Frameworks/peekaview Helper.app/Contents/MacOS/peekaview Helper",
      "Contents/Frameworks/peekaview Helper (Renderer).app/Contents/MacOS/peekaview Helper (Renderer)"
    ]
  },
  "dmg": {
    "background": "build-resources/dmg-background.png",
    "iconSize": 128,
    "contents": [
      {
        "x": 130,
        "y": 220
      },
      {
        "x": 410,
        "y": 220,
        "type": "link",
        "path": "/Applications"
      }
    ]
  },
  "linux": {
    "target": [
      "AppImage",
      "deb",
      "snap",
      "rpm"
    ],
    "icon": "build-resources/icons",
    "artifactName": "${productName}-${version}-linux-${arch}.${ext}",
    "category": "Utility"
  },
  "snap": {
    "grade": "stable",
    "confinement": "strict",
    "summary": "A Desktop sharing application",
    "plugs": [
      "home",
      "network",
      "x11"
    ]
  }
}